<div class="container">
  <div class="card">
    <h2>Propose a language meet-up with <%= @receiver.first_name %></h2>
    <%= simple_form_for([@receiver, @appt]) do |f| %>
      <%= f.input :datetime, html5:true, label: "When would you like to meet?" %>
      <%= f.input :location, label: "Where would you like to meet?" %>
      <%= f.association :asker_language, collection: @a_user_languages, label_method: :language_name, label: "Your language" %>
      <%= f.association :receiver_language, collection: @r_user_languages, label_method: :language_name, label: "Language you want to learn from #{@receiver.first_name}" %>
      <%= f.submit 'Send request', class: 'btn btn-primary'  %>
    <% end %>

  </div>
</div>
