<div class="form-inputs">
  <%= f.input :datetime, html5:true, label: "When would you like to meet?",required:true %>
  <%= f.input :location, label: "Where would you like to meet?", required:true %>
  <%= f.association :asker_language, collection: @a_user_languages, label_method: :language_name, label: "Your language", required:true %>
  <%= f.association :receiver_language, collection: @r_user_languages, label_method: :language_name,required:true, label: "Language you want to learn from #{@receiver.first_name}" %>
</div>
