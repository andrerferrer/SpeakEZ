<div class="container pt-3">
  <div class="user-basic-info">
    <h2 class= "" >
      <%= @user.username %>
    </h2>
    <h3>
      <%= "#{@user.age} - #{@user.location.capitalize}" %>
    </h3>
    <p>
      <%= @user.availability %>
    </p>
