<div class="container my-profile mt-4 px-3">
  <div class="back-icon">
    <%= link_to :back do %>
      <%= icon('far', 'arrow-alt-circle-left' ) %>
    <% end %>
  </div>

  <div class="headline">
    <img src="<%= user.photo.key ? (cloudinary_url user.photo.key) : "https://images.unsplash.com/photo-1643725173053-ed68676f1878?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" %>" class="img-appt"/>
    <div class="headline-text">
    <h2><%= user.first_name %> <%= user.last_name %></h2>
    Username: <%= user.username %><br>
    <%= user.age %> years from: <%= user.location %> <br>
    </div>
  </div>
  <div class="profile-header">
    <h2>Languages</h2>
    <%= link_to new_user_user_language_path(user), data: {turbolinks: "false"} do %>
      <%= icon('fas', 'plus', class: "fa") %>
    <% end %>
  </div>
  <div class="language-box">
    <div class="languages">
      <div class="languages-header">
        <h2>Speaks</h2>
      </div>
      <div class="divider"></div>
      <div class="languages-header">
        <h2>Learning</h2>
      </div>
    </div>
    <div class="languages">
      <div class="language-list">
        <% @speaking.each do |user_language| %>
          <div class="language">
            <p><%= user_language.language.name %><%= "*" if user_language.skill_level == 5%></p>
            <%= render "shared/language_level_profile", user_language: user_language %>
          </div>
        <% end %>
        <div class="native">* native</div>
      </div>
      <div class="divider"></div>
      <div class="language-list">
        <% @learning.each do |user_language| %>
          <div class="language">
            <p><%= user_language.language.name %></p>
            <%= render "shared/language_level_profile", user_language: user_language %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="profile-header">
    <h2>About</h2>
  </div>
  <div class="bio">
    <p><%= user.bio %></p>
  </div>
  <div class="appt-options">
    <div class="edit-profile">
      Edit profile <%= icon('fas', 'edit', class: "fa") %>
    </div>
    <%= link_to destroy_user_session_path, method: :delete do %>
      <div class="logout">
        Logout<%= icon('fas', 'sign-out-alt', class: "fa") %>
      </div>
    <% end %>
  </div>
</div>
