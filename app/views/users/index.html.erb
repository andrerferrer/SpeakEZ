        <div class="user-index-search">
          <%= simple_form_for :search, url: users_path, method: :get do |f| %>
            <div class="search-form-control form-group">
              <%= f.input :user_language, label:false,include_blank: false, collection: @user.user_languages.map {|ul|"#{ul.language.flagcode} #{ul.language.name}" }, data:{select2_options_value: {tags: true}} %>
              <button name="button" type="submit" class="btn btn-flat">
                <div class="button"><i class="fas fa-search"></i></div>
              </button>
            </div>
          <% end %>
        </div>


<div class="container p-3">
    <% @users.each do |user| %>
      <%= render "users/index/user_card", user: user  %>
    <% end %>
</div>
